<?xml version="1.0" encoding="utf-8" ?>
<odoo>
       <record id="view_sale_advance_payment_inv" model="ir.ui.view">
           <field name="name">sale.advance.payment.inv.twikey.form.inherit</field>
           <field name="model">sale.advance.payment.inv</field>
           <field name="inherit_id" ref="sale.view_sale_advance_payment_inv" />
           <field name="arch" type="xml">
               <xpath expr="//field[@name='advance_payment_method']" position="after">
                   <field name="send_to_twikey" />
                   <field name="auto_collect_invoice" attrs="{'invisible': [('send_to_twikey', '=', False)]}"/>
                   <field name="twikey_template_id" attrs="{'invisible': [('send_to_twikey', '=', False)]}"/>
               </xpath>
           </field>
       </record>
</odoo>
