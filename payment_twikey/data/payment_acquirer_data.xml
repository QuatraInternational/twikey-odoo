<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_acquirer_twikey" model="payment.acquirer">
        <field name="provider">twikey</field>
        <field name="name">Twikey</field>
        <field name="display_as">Payment via Twikey</field>
        <field name="show_credentials_page">False</field>
        <field name="image_128" type="base64" file="payment_twikey/static/description/icon.png"/>
        <field name="redirect_form_view_id" ref="redirect_form"/>
        <field name="description" type="html">
            <p>
                A payment gateway for your recurring payments via your bank and one-off payments via your favorite payment provider.
            </p>
            <ul class="list-inline">
                <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
                <li class="list-inline-item"><i class="fa fa-check"/>Payment Status Tracking</li>
                <li class="list-inline-item"><i class="fa fa-check"/>Save Cards</li>
            </ul>
        </field>
        <field name="support_authorization">False</field>
        <field name="support_fees_computation">False</field>
        <field name="support_refund"></field>
        <field name="support_tokenization">True</field>
    </record>

    <record id="payment_method_twikey" model="account.payment.method">
        <field name="name">Twikey</field>
        <field name="code">twikey</field>
        <field name="payment_type">inbound</field>
    </record>

    <record id="channel_twikey" model="mail.channel" >
        <field name="name">twikey</field>
        <field name="description">Twikey payment updates</field>
    </record>

</odoo>
